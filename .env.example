# Book Scraping Bot Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Enable debug mode
DEBUG=false

# Premium tier (set to true for paid features)
IS_PREMIUM=false

# Output directory for downloaded files
OUTPUT_DIR=output

# =============================================================================
# DOWNLOAD SETTINGS
# =============================================================================

# Enable/disable downloads
DOWNLOAD_BOOKS=true
DOWNLOAD_COVERS=true

# Maximum file size in MB
MAX_FILE_SIZE_MB=100

# Scraping delay between requests (seconds)
SCRAPING_DELAY=1.0

# Rate limiting (requests per minute)
REQUESTS_PER_MINUTE=60
PREMIUM_REQUESTS_PER_MINUTE=300

# =============================================================================
# GOOGLE DRIVE CONFIGURATION
# =============================================================================

# Enable Google Drive upload
GDRIVE_ENABLED=false

# Google Drive folder ID (get from Drive URL)
GDRIVE_FOLDER_ID=

# =============================================================================
# FTP CONFIGURATION
# =============================================================================

# Enable FTP upload
FTP_ENABLED=false

# FTP server details
FTP_HOST=
FTP_PORT=21
FTP_USERNAME=
FTP_PASSWORD=
FTP_DIRECTORY=/

# =============================================================================
# API KEYS FOR DATA ENRICHMENT
# =============================================================================

# Google Books API key (get from Google Cloud Console)
GOOGLE_BOOKS_API_KEY=

# =============================================================================
# AFFILIATE LINKS
# =============================================================================

# Amazon affiliate tag
AMAZON_AFFILIATE_TAG=

# eBay affiliate ID
EBAY_AFFILIATE_ID=

# =============================================================================
# WORDPRESS CONFIGURATION
# =============================================================================

# Enable WordPress posting
WORDPRESS_ENABLED=false

# WordPress site details
WORDPRESS_URL=https://yoursite.com
WORDPRESS_USERNAME=
WORDPRESS_PASSWORD=

# =============================================================================
# BLOGSPOT CONFIGURATION
# =============================================================================

# Enable Blogspot posting
BLOGSPOT_ENABLED=false

# Blogspot details
BLOGSPOT_BLOG_ID=
BLOGSPOT_API_KEY=

# =============================================================================
# PREMIUM FEATURES (Paid Tier Only)
# =============================================================================

# Enable video generation
VIDEO_GENERATION_ENABLED=false

# Enable Telegram bot notifications
TELEGRAM_BOT_ENABLED=false

# Telegram bot token (get from @BotFather)
TELEGRAM_BOT_TOKEN=

# Telegram channel ID for notifications
TELEGRAM_CHANNEL_ID=

# Enable advanced analytics
ANALYTICS_ENABLED=false